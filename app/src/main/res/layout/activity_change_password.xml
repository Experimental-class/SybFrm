<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tyhj.sybfrm.initlogin.ChangePassword">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="22dp" />
        <TextView
            android:layout_marginTop="17dp"
            android:textSize="16sp"
            android:text="@string/aboutchangepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textColorHint="@color/hint"
            android:layout_marginTop="30dp"
            android:id="@+id/etEmailToChange"
            android:hint="请输入你的邮箱地址"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp" />
            <android.support.v7.widget.CardView
                app:cardCornerRadius="3dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:layout_gravity="bottom"
                android:id="@+id/getYzm"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <EditText
            android:textColorHint="@color/hint"
            android:layout_marginTop="20dp"
            android:id="@+id/etYzm"
            android:hint="请输入验证码"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:textColorHint="@color/hint"
            android:layout_marginTop="20dp"
            android:id="@+id/etNewPassword"
            android:hint="请输入新密码"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:background="#2ca6cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="5dp"
                android:textColor="@color/bgwhite"
                android:layout_weight="1"
                android:id="@+id/btGetNewPassword"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical|right"
                android:textSize="17sp"
                android:text="下一步" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
